/* pages/order/order.wxss */
.orderBox{
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	background-color: #eee;
}
.order{
	 flex: 1;
}
.order_item{
	height: 130rpx;
	padding: 20rpx;
	background-color: #fff;
}
.order_title{
	display: flex;
	justify-content: space-between;
}
.order_price{
	color: red;
}
.order_num{
	display: flex;
	justify-content:flex-end;
	padding-top: 40rpx;
}
.unfold{
	height: 50rpx;
	border-top: 1px solid #eeee;
	padding: 20rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 30rpx;
	background-color: #fff;
}
.balance{
	padding: 30rpx 20rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #fff;
	margin-top: 20rpx;
}


.info{
	height: 300rpx;
  display: flex;
 justify-content: center;
}
.order_footer{
	background-color: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 100rpx;
}
.order_footer .price{
	color:#777;
}
.order_footer .price text{
	color: red;
}
.order_footer .btn{
	background-color:#ffa72b ;
	color: #fff;
	height: 80rpx;
	width: 200rpx;
	text-align: center;
	line-height: 80rpx;
}