/* pages/sucess/sucess.wxss */
page{
	height: auto;
}

.successBox{
	height: 100%;
	display: flex;
	flex-direction: column;
	background-color: #eee;
}
.hint{
	height: 400rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.hint image {
	margin: 60rpx 0 10rpx 0;
	width: 100rpx;
	height: 100rpx;
}

.back{
	width: 200rpx;
	height: 70rpx;
	border-radius: 10rpx;
	background-color: #f5ba47;
	color: #fff;
	margin-top: 50rpx;
	text-align: center;
	line-height: 70rpx;
	font-size: 25rpx;
}

.footer{
	flex: 1;
}
.title{
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 20rpx;
	background-color: #fff;
	border-bottom: 1px solid #eee;
}

.title text {
	color: red;
	margin: 0 10rpx;
}
.footer_item{
	background-color: #ffff;
	padding: 20rpx;
	display: flex;
	flex-direction: column;
	margin-bottom: 20rpx;
}
.footer_title{
	 margin: 10rpx 0;
	 color: #777;
	 font-size: 32rpx;
}

.footer_price{
	color: #dd001b;
	font-size: 38rpx;
}
.footer_item image {
	width: 100%;
	height: 350rpx;
}
.sales{
	margin-top: 15rpx;
	display: flex;
	justify-content: space-between;
}

.btn{
	width: 200rpx;
	height: 60rpx;
	background-color: #dd001b;
	color: #fff;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 10rpx;
	font-size: 25rpx;
}