/* pages/user/index.wxss */

.userBox{
	height: 100%;
	display: flex;
	flex-direction: column;
	background-color: #eee;
}
.remaining , .recharge , .balance{
	flex: 1;
}
.balance{
	flex: 1;
	display: flex;
  background: linear-gradient(#f5bb49 , #fbe3ad);
}

.balance .balance_left{
		width: 200rpx;
		text-align: center;
}

.balance_left image {
	margin-top: 30rpx;
	width: 130rpx;
	height: 130rpx;
}

.balance_right{
	flex:1;
	display: flex;
	flex-direction: column;
}
.right_user{
	margin-top: 28rpx;
	margin-left: 20rpx;
}

.right_money{
	font-size: 60rpx;
	color: red;
}

.right_detail{
	width: 200rpx;
	border: 1px solid #f6bf55;
	padding: 10rpx;
	font-size: 28rpx;
	text-align: center;
	margin-top: 120rpx;
}

.remaining_centent{
	display: flex;
	flex-wrap: wrap;
}

.remaining_item{
	width: 47%;
	height: 120rpx;
	margin: 10rpx;
	background-color: #fefeee;
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
}

.remaining_item_num{
	font-size: 40rpx;
  margin-bottom: 10rpx;
}

.remaining{
	margin-top: 20rpx;
	background-color: #fff;
}
.remaining_money{
	margin: 10rpx 20rpx;
}
.recharge_text{
	width: 70%;
	height: 80rpx;
	background-color: #f5bb49;
	color: #fff;
	text-align: center;
	line-height: 80rpx;
	margin: 80rpx auto;
	border-radius: 5rpx;
	font-size: 25rpx;
}

.active{
	background-color: red;
	color: #fff;
}





