/* pages/cart/index.wxss */
.box{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.box .centent{
	flex: 1;
	margin-bottom: 180rpx;
}


.footer{
	position: fixed;
	bottom: 0;
	width: 100%;
}

.hintInfo{
	display: flex;
	flex-direction: column;
	align-items: center;
}
.title{
	margin-top: 250rpx;
	color: #7777;
}

.imgBox{
	width: 400rpx;
	height: 400rpx;
	margin: 50rpx 0;
}
.imgBox image {
	width: 100%;
	height: 100%;
}

.scanCode{
	width: 300rpx;
	height: 80rpx;
	border-radius: 15rpx;
	background-color: #f5c048;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 28rpx;
}
